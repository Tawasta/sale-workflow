<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_report_commitment_date" model="ir.ui.view">
        <field name="name">sale.order.report.commitment.date.report</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.report_saleorder_document"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='informations']" position="inside">
                <div t-if="doc.commitment_date" class="col-auto mw-100 mb-2">
                    <strong>Confirmed Date:</strong>
                    <p class="m-0" t-field="doc.commitment_date"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
