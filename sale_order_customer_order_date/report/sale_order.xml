<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@t-if='doc.confirmation_date and doc.state not in ['draft','sent']']" position="before">
            <div t-if="doc.customer_order_date" class="col-auto mw-100 mb-2">
                <strong>Customer Order Date:</strong>
                <p class="m-0" t-field="doc.customer_order_date"/>
            </div>
        </xpath>
    </template>
</odoo>
